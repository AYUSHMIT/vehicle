cabal-version: 1.12

name:           vehicle
version:        0.1.0.0
description:    Please see the README on GitHub at <https://github.com/wenkokke/vehicle#readme>
homepage:       https://github.com/wenkokke/vehicle#readme
bug-reports:    https://github.com/wenkokke/vehicle/issues
author:         Wen Kokke
maintainer:     wenkokke@users.noreply.github.com
copyright:      Â© Wen Kokke
license:        BSD3
license-file:   LICENSE
build-type:     Simple
extra-source-files:
    README.md
    ChangeLog.md

source-repository head
  type: git
  location: https://github.com/wenkokke/vehicle

library
  exposed-modules:    Lib
                    , Vehicle.Abs
                    , Vehicle.ErrM
                    , Vehicle.Layout
                    , Vehicle.Lex
                    , Vehicle.Par
                    , Vehicle.Print
                    , Vehicle.Skel
  other-modules:      Paths_vehicle
  hs-source-dirs:     src/hs
                    , gen/hs
  build-depends:      array >=0.5 && <1
                    , base  >=4.7 && <5
                    , text  >=1.2 && <2
  build-tools:        alex
                    , happy
  default-language:   Haskell2010
  ghc-options:        -Wall

test-suite vehicle-test
  type:               exitcode-stdio-1.0
  main-is:            Spec.hs
  other-modules:      Paths_vehicle
  hs-source-dirs:     test
  ghc-options:        -threaded -rtsopts -with-rtsopts=-N
  build-depends:      base  >=4.7 && <5
                    , HUnit >=1.6 && <2
                    , text  >=1.2 && <2
                    , vehicle
  default-language:   Haskell2010
